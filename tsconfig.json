{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "newLine": "LF",
        "outDir": "./lib/",
        "target": "ESNext",
        "sourceMap": true,
        "declaration": true,
        "jsx": "preserve",
        "lib": [
            "es2017",
            "dom"
        ],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        ".git",
        ".cache",
        "node_modules"
    ]
}